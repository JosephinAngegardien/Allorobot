{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    <section class="formulaire">
        <div class="titreform"><h1>Inscription</h1></div>

        <div class="saisieform">
        {{ form_start(registrationForm) }}

            {{ form_row(registrationForm.siret, {"label": "N° siret "}) }}
            {{ form_row(registrationForm.email, {"label": "Courriel "}) }}
            {{ form_row(registrationForm.nom, {"label": "Nom ou raison sociale "}) }}
            {{ form_row(registrationForm.adresse, {"label": "Adresse "}) }}
            {{ form_row(registrationForm.ville, {"label": "Ville "}) }}
            {{ form_row(registrationForm.codepostal, {"label": "Code postal "}) }}
            {{ form_row(registrationForm.password.first, {"label": "Mot de passe (au moins huit caractères) "}) }}
            {{ form_row(registrationForm.password.second, {"label": "Confirmation du mot de passe "}) }}

            <button class="valider">Enregistrement</button>

        {{ form_end(registrationForm) }}
        </div>
    </section>

{% endblock %}


