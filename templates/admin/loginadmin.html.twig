{% extends 'base.html.twig' %}

{% block title %}Connexion admin{% endblock %}

{% block body %}

{% block navigation %}
{% endblock %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<section class="formulaire">
<form method="post">

    {% if error %}
        <div class="">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="saisieform">
        <div class="idconnex">
            <label for="inputUsername" class="">Nom </label>
            <input type="text" value="{{ last_username }}" name="username" class="" placeholder="Nom admin" required autofocus>
        </div>
        <div class="idconnex">
            <label for="inputPassword" class="">Mot de passe </label>
            <input type="password" name="password"  class="" placeholder="Mot de passe admin" required>
        </div>
        <input type="hidden" name="_target_path" value="/account"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

        <div>
            <button type="submit" class="valider2">Connexion</button>
        </div>
    </div>

</form>
</section>

{% endblock %}




